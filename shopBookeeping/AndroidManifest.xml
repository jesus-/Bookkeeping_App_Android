<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopbookeeping"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.shopbookeeping.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shopbookeeping.ProviderActivity"
            android:label="@string/title_activity_provider" >
        </activity>
        <activity
            android:name="com.example.shopbookeeping.NameExpensesActivity"
            android:label="@string/title_activity_name__expenses" >
        </activity>
        <activity
            android:name="com.example.shopbookeeping.ActivePaymentsActivity"
            android:label="@string/title_activity_active_payments" >
        </activity>
        <activity
            android:name="com.example.shopbookeeping.PaymentByProviderActivity"
            android:label="@string/title_activity_payment_by_provider" >
        </activity>
        <activity
            android:name="com.example.shopbookeeping.ShowPaymentActivity"
			android:theme="@style/CustomDialog"
            android:label="@string/title_activity_show_payment" >
        </activity>
        <activity
            android:name="com.example.shopbookeeping.ShowExpenseActivity"
            android:theme="@style/CustomDialog" 
            android:label="@string/title_activity_show_expense" >
        </activity>
        <activity
            android:name="com.example.shopbookeeping.ExpenseByNameActivity"
            android:label="@string/title_activity_expense_by_name" >
        </activity>
        <activity
            android:name="com.example.shopbookeeping.PaymentsExpensesByDayActivity"
            android:label="@string/title_activity_payments_expenses_by_day" >
        </activity>
    </application>

</manifest>
