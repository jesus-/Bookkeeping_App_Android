<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"     
    >

    <TextView android:id="@+id/tv_head_payment"
	style="@style/informationTag"
   android:text="Expense"
   
    />    
	<RelativeLayout
	android:id="@+id/rl_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_below="@+id/tv_head_payment"    
    >  
      <TextView
       android:id="@+id/tv_id"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:text="ID"
       android:textAppearance="?android:attr/textAppearanceLarge"
       style="@style/custom_form"
      />
       <EditText
       android:id="@+id/et_id"
       android:inputType="text"
       android:layout_toRightOf="@+id/tv_id"      
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text=""
       android:textAppearance="?android:attr/textAppearanceLarge"
       style="@style/custom_form"
       android:background="@drawable/edittext_rounded_corners"          
      />
    </RelativeLayout>
    <RelativeLayout
	android:id="@+id/rl_date"
	android:layout_below="@+id/rl_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"     
    >  
      <TextView
       android:id="@+id/tv_date"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:text="Date"
       android:textAppearance="?android:attr/textAppearanceLarge"
       style="@style/custom_form"
       
      />
       <EditText
       android:id="@+id/et_date"
       android:layout_toRightOf="@+id/tv_date" 
       android:inputType="text"           
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text=""
       android:textAppearance="?android:attr/textAppearanceLarge"
       style="@style/custom_form"
       android:background="@drawable/edittext_rounded_corners"     
      />
    </RelativeLayout>	
    <RelativeLayout
	android:id="@+id/rl_name_expense"
	android:layout_below="@+id/rl_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"     
    >  
      <TextView
       android:id="@+id/tv_name_expense"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:text="Provider"
       android:textAppearance="?android:attr/textAppearanceLarge"
       style="@style/custom_form"
      />

     <Spinner
         android:id="@+id/s_name_expense"
         android:layout_toRightOf="@+id/tv_name_expense"          
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:background="@drawable/edittext_rounded_corners"     
          
 		 />

    </RelativeLayout>	
  <RelativeLayout
	android:id="@+id/rl_amount"
	android:layout_below="@+id/rl_name_expense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"     
    >  
      <TextView
       android:id="@+id/tv_amount"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:text="Amount"
       android:textAppearance="?android:attr/textAppearanceLarge"
       style="@style/custom_form"
      />
       <EditText
       android:id="@+id/et_amount"
       android:layout_toRightOf="@+id/tv_amount" 
		android:inputType="numberDecimal"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text=""
       android:textAppearance="?android:attr/textAppearanceLarge"
       style="@style/custom_form"
       android:background="@drawable/edittext_rounded_corners"     
       
      />
    </RelativeLayout>	
   <RelativeLayout
	android:id="@+id/rl_buttons1"
	android:layout_below="@+id/rl_amount"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center"
    >    
       <Button
       android:id="@+id/b_block"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:onClick="onClickBlock"
       
       />
        <Button
       android:id="@+id/b_delete"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:onClick="onClickDelete"
       android:text="Delete"
       android:layout_toRightOf="@+id/b_block"
       
		/>
    </RelativeLayout>	
       
   <RelativeLayout
	android:id="@+id/rl_buttons2"
	android:layout_below="@+id/rl_buttons1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center" 
    >  
  	 <Button
       android:id="@+id/b_ok"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:onClick="onClickOk"
       android:text="Ok"
 	/>
       <Button
       android:id="@+id/b_save"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:onClick="onClickSave"
       android:text="Save" 
       android:layout_toRightOf="@+id/b_ok"       
       />
    </RelativeLayout>  
<!--     <TextView
       android:id="@+id/tv_status"
       android:layout_below="@+id/rl_buttons2" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:textSize="40sp"
      />  -->	           
  </RelativeLayout>
